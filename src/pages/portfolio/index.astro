---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import PortfolioVideo from '../../components/PortfolioVideo.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { sortPortfolioByDate } from '../../portfolio';

type PortfolioEntry = CollectionEntry<'portfolio'>;

const posts = (await getCollection('portfolio')).filter((post: PortfolioEntry) => !post.data.draft).sort(sortPortfolioByDate);
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<style slot="head">
			body::before {
				content: '';
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-color: rgba(0, 0, 0, 0);
				pointer-events: none;
				z-index: 1;
				transition: background-color 0.3s ease;
			}
			body:has(ul a:hover)::before {
				background-color: rgba(0, 0, 0, 0.8);
			}
			header {
				position: relative;
				z-index: 2;
			}
			main {
				position: relative;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 4rem;
				list-style-type: none;
				padding: 0;
				position: relative;
				justify-content: flex-start;
			}
			ul li {
				flex: 0 0 calc(50% - 2rem);
				position: relative;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li video {
				padding: 10px;
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
				position: relative;
				z-index: 0;
			}
			ul li:hover {
				position: relative;
				z-index: 2;
			}

			ul li:hover .title {
				color: white;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			ul a:hover video {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					flex: 0 0 100%;
					text-align: center;
				}
			}
		</style>
	<Header />
	<main>
		<section>
			<ul>
				{
					posts.map((post: PortfolioEntry) => (
						<li>
							<a href={`/portfolio/${post.id}/`}>
								{post.data.heroImage && (
									<PortfolioVideo heroImage={post.data.heroImage} heroAlt={post.data.heroAlt} />
								)}
								<p class="title">{post.data.title}</p>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</main>
</BaseLayout>
