---
import { Image } from 'astro:assets';
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

type PortfolioEntry = CollectionEntry<'portfolio'>;

const posts = (await getCollection('portfolio')).sort(
	(a: PortfolioEntry, b: PortfolioEntry) => (b.data.pubDate?.valueOf() ?? 0) - (a.data.pubDate?.valueOf() ?? 0),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body::before {
				content: '';
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-color: rgba(0, 0, 0, 0);
				pointer-events: none;
				z-index: 1;
				transition: background-color 0.3s ease;
			}
			body:has(ul a:hover)::before {
				background-color: rgba(0, 0, 0, 0.8);
			}
			header {
				position: relative;
				z-index: 2;
			}
			main {
				position: relative;
			}
			ul {
				display: flex;
				flex-direction: column;
				gap: 4rem;
				list-style-type: none;
				padding: 0;
				position: relative;
			}
			ul li {
				margin: 0 auto;
				position: relative;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
				position: relative;
				z-index: 0;
			}
			ul li:hover {
				position: relative;
				z-index: 2;
			}

			ul li:hover .title {
				color: white;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post: PortfolioEntry) => (
							<li>
                <a href={`/portfolio/${post.id}/`}>
                {post.data.heroImage && (
                  <Image width={720} height={360} src={post.data.heroImage} alt="" />
                )}
									<p class="title">{post.data.title}</p>
									{post.data.pubDate && <p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
	</body>
</html>
