---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import PortfolioVideo from '../components/PortfolioVideo.astro';

type Props = CollectionEntry<'portfolio'>['data'];

const { title, description, url, heroImage, heroAlt } = Astro.props;
---

<BaseLayout title={title} description={description}>
	<style slot="head">
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image :global(.video-wrapper) {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
		</style>
	<Header />
	<main>
		<article>
			<div class="prose">
				<slot />
				{heroImage && url && (
					<div class="hero-image">
						<a href={url} target="_blank">
							<PortfolioVideo heroImage={heroImage} heroAlt={heroAlt} static={true} />
						</a>
					</div>
				)}
			</div>
		</article>
	</main>
</BaseLayout>
